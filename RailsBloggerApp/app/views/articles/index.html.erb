<h1>All Articles</h1>

<ul id="articles">
  <% @articles.each do |article| %>
    <ul>
    	<li> <%= link_to article.title, article_path(article), class:'article.title', id:"article_{article_id}" %></li>
    	<li> <%= article.body %></li></br>
    </ul>
  <% end %>
  <%= link_to "Create New Article", new_article_path, class: "new_article"%>
</ul>